<%- include("partials/header") -%>

<link rel="stylesheet" href="/css/resetstyles.css">

</head>

<body>
  <ul class="nav justify-content-end">
    <a class="navbar-brand brand" href="/<%=lang%>">Online Survey</a>
    <li class="nav-item">
      <a class="nav-link" href="/<%=lang%>/about"><%=version.about%></a>
    </li>
    <li class="nav-item dropdown">
      <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
        <%=version.toggle%>
      </a>
      <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
        <li><a class="dropdown-item" href="/en/reset/<%=id%>">EN</a></li>
        <li><a class="dropdown-item" href="/de/reset/<%=id%>">DE</a></li>
      </ul>
    </li>
  </ul>

  <% if (message) { %>
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
      <strong><%=message%></strong>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>

  <div class="container">


    <div class="card mb-3">
      <div class="card-header"><p><%=version.reset%></p></div>
      <div class="card-body">
        <form class="form" action="/<%=lang%>/reset/<%=id%>" method="post">

        <div class="mb-3">
          <label class="form-label">
            <span><%=version.password%></span>
            <input class="form-control" type="password" name="password">
          </label>
        </div>
        <div class="mv-3">
          <label class="form-label">
            <span><%=version.confirmpassword%></span>
            <input class="form-control" type="password" name="confirmpassword">
          </label>
        </div>

        <button type="submit" class="submit btn btn-warning"><%=version.resetnow%></button>
        </form>
      </div>
    </div>


  </div>

  <script type="text/javascript">
    var alertList = document.querySelectorAll('.alert')
    alertList.forEach(function(alert) {
      new bootstrap.Alert(alert)
    })
  </script>

</body>
<%- include("partials/footer") -%>
